@model IEnumerable<ExpenseManager.Models.Category>

<head>
    <link href="~/Content/styles/categories-page.css" type="text/css" rel="stylesheet" />
</head>
@if (Model.Where(c => c.User.UserName == User.Identity.Name).Any())
{
    <div class="categories-wrapper">
        <div class="row">
            <div class="col-lg-6">
                <p class="new-category-title"><h3 class="new-category-title">@Html.ActionLink("Create", "Create")  new category!</h3> </p> 
        </div>
    </div>
        <div class="categories-table">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th></th>
                </tr>

                @foreach (var c in Model.Where(c => c.User.UserName == User.Identity.Name))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => c.Title)
                        </td>

                        <td>
                            <button class="btn btn-danger delete"> @Html.ActionLink("Delete", "Delete", new { id = c.CategoryId })</button>
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
}


else
{
    <p>There are no categories.</p>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
}
