@model IEnumerable<ExpenseManager.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var c in Model.Where(c => c.User.UserName == User.Identity.Name)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => c.Title)
        </td>
        <td>
            Author: @Html.DisplayFor(modelItem => c.User.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=c.CategoryId }) |
            @Html.ActionLink("Details", "Details", new { id=c.CategoryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=c.CategoryId })
        </td>
    </tr>
}

</table>
