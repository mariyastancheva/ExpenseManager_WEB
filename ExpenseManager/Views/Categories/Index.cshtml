@model IEnumerable<ExpenseManager.Models.Category>

<head>
    <link href="~/Content/styles/categories-page.css" rel="stylesheet" />
</head>
@if (Model.Where(c => c.User.UserName == User.Identity.Name).Any())
{
    <div class="categories-wrapper">

        <p class="create-new-category">
            @Html.ActionLink("Create", "Create")
            <h3 class="new-category-title"> new category!</h3>
        </p>
        <div class="categories-table">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th></th>
                </tr>

                @foreach (var c in Model.Where(c => c.User.UserName == User.Identity.Name))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => c.Title)
                        </td>

                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = c.CategoryId })
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
        }


        else
        {
        <p>There are no categories.</p>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        }
